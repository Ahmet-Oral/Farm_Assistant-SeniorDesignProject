<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Notes">

    <include
        android:id="@+id/toolbar_notes"
        layout="@layout/toolbar" />

    <ListView
        android:id="@+id/notes_ListView"
        android:layout_width="409dp"
        android:layout_height="480dp"
        android:nestedScrollingEnabled="true"
        android:background="#1AC2D6AD"
        android:layout_marginTop="36dp"
        app:layout_constraintBottom_toTopOf="@+id/notes_New_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_notes"
        app:layout_constraintVertical_bias="0.194" />

    <Button
        android:textStyle="bold"
        android:textColor="@color/white"
        android:stateListAnimator="@null"
        app:cornerRadius="18dp"
        android:backgroundTint="#9975A347"
        android:id="@+id/notes_New_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="44dp"
        android:text="@string/str_notes_NewNote"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>