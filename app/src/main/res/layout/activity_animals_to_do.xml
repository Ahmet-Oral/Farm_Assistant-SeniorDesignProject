<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AnimalsToDo">

    <include
        android:id="@+id/toolbar_animals_to_do"
        layout="@layout/toolbar" />

    <ListView
        android:id="@+id/animals_to_do_ListView"
        android:layout_width="409dp"
        android:layout_height="350dp"
        android:layout_marginTop="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_animals_to_do" />

    <Button
        android:id="@+id/animals_to_do_Add_Btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_animals_to_do_Add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>