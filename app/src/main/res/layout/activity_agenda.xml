<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Agenda">

    <include
        android:id="@+id/toolbar_agenda"
        layout="@layout/toolbar" />

    <Button
        android:id="@+id/agenda_Calendar_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="148dp"
        android:layout_marginTop="56dp"
        android:text="@string/str_agenda_Calendar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_agenda" />

    <Button
        android:id="@+id/agenda_Notes_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="@string/str_agenda_Notes"
        app:layout_constraintEnd_toStartOf="@+id/agenda_Inventory_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/agenda_Calendar_btn" />

    <Button
        android:id="@+id/agenda_Inventory_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="@string/str_agenda_Inventory"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/agenda_Notes_btn"
        app:layout_constraintTop_toBottomOf="@+id/agenda_Calendar_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>